<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="2022_02_18_CreateBalanceView" author="khoreshko.e.v">
        <createView viewName="balance_log">
            SELECT date_trunc('hour', timestamp) as datetime, sum(amount) as amount
            FROM payment
            GROUP BY datetime
        </createView>
    </changeSet>
</databaseChangeLog>